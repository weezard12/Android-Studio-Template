<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@raw/home_screen_bkg"
    tools:context=".scenes.exampleScenes.ChessTest.scenes.MenuActivity">

    <!-- Background Pattern -->
    <com.example.android2dtest.scenes.exampleScenes.ChessTest.scenes.PatternView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Guideline for positioning elements properly -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Logo ImageButton at the top -->
    <ImageButton
        android:id="@+id/logo_image_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@raw/knight_icon"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="@id/guideline_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button Group Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logo_image_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline_bottom">

        <!-- "Play Hot Seat" Button -->
        <Button
            android:id="@+id/btn_play_hot_seat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Play Hot Seat"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" />

        <!-- "Play VS Bot" Button -->
        <Button
            android:id="@+id/btn_play_vs_bot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Play VS Bot"
            app:layout_constraintTop_toBottomOf="@id/btn_play_hot_seat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" />

        <!-- "Settings" Button -->
        <Button
            android:id="@+id/btn_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Settings"
            app:layout_constraintTop_toBottomOf="@id/btn_play_vs_bot"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" />

        <!-- "Quit" Button -->
        <Button
            android:id="@+id/btn_quit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Quit"
            app:layout_constraintTop_toBottomOf="@id/btn_settings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
